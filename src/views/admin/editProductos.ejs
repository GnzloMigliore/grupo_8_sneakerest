<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/administrar.css">
    <link rel="stylesheet" href="/css/navbar.css">
</head>
<body>
    <header>
        <%- include('../partials/navBar.ejs') %>
    </header>
    <section class="row">
        <article class="col-12 card pt-5 border-0">
            <div class="card-body">
                <h1 class="col-8 mx-auto pb-3 card-title text-center border-bottom">EDITAR PRODUCTOS</h1>
            </div>
        </article>
    </section>
    
    <section class="bg-home pt-4">
        <div class="container">
            <div class="row" >
                <div id="editar" class="col-8 mx-auto">
                    <div class="create-form">
                        <form action="/adminProducts/edit/<%= zapatillas.id%>?_method=PUT
                            " method="POST" enctype="multipart/form-data" >
                            
                            <div class="form-group">
                                <input type="hidden" name="oldBrand"  value="<%= zapatillas.brands.name%>">
                                <input type="text" class="form-control" name="marca" placeholder="Marca" required="required" value="<%= zapatillas.brands.name%>">
                            </div>	
                            <div class="form-group">
                                <input type="hidden" name="oldExample"  value="<%= zapatillas.examples.name%>">
                                <input type="text" class="form-control" name="modelo" placeholder="Modelo" required="required" value="<%= zapatillas.examples.name%>">
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="oldDescription"  value="<%= zapatillas.description%>">
                                <input type="text" class="form-control" name="descripcion" placeholder="DescripciÃ³n del producto" required="required" value="<%= zapatillas.description%>">
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="oldPrice"  value="<%= zapatillas.price%>">
                                <input type="number" class="form-control" name="precio" placeholder="Indique el precio" required="required" value="<%=zapatillas.price%>">
                            </div>
                            <div class="form-group">
                                
                                <select  name="descuento" class="custom-select" id="validationCustom04" required>
                                    <option disabled value="#">Seleccione un descuento"</option>
                                    <option value="0" <%= zapatillas.discount == 0 ? "selected" : null %>>Sin descuento</option>
                                    <option value="10" <%= zapatillas.discount == 10 ? "selected" : null %>>10%</option>
                                    
                                </select>
                            </div>
                            <!--Aqui solicito la imagen al usuario-->
                            <div class="custom-file">
                            <!--Color-->
                            <div class="form-group col-2 pl-0">
                                <input type="color" list="presetColors" class="form-control border-0 rounded-0 bg-light" name="color" required="required" value="<%= zapatillas.color %>" >
                                <datalist id="presetColors" >
                                    <option value="#74cfe0"/>
                                    <option value="#00ff00"/>
                                    <option value="#0000ff"/>
                                </datalist>
                            </div>
                            <!--Talles-->
                            <div class="form-group col-6 pl-0">
                                <select class="selectpicker col-12 select-talles pr-0" multiple title="Seleccione los talles" data-header="Seleccione los talles" name="talles">
                                    <option value="16">16</option>
                                    <option value="17">17</option>
                                    <option value="18">18</option>
                                    <option value="19">19</option>
                                    <option value="20">20</option>
                                    <option value="27">27</option>
                                    <option value="28">28</option>
                                    <option value="28.5">28.5</option>
                                    <option value="29">29</option>
                                    <option value="29.5">29.5</option>
                                    <option value="30">30</option>
                                    <option value="30.5">30.5</option>
                                    <option value="31">31</option>
                                    <option value="31.5">31.5</option>
                                    <option value="32">32</option>
                                    <option value="32.5">32.5</option>
                                    <option value="33">33</option>
                                    <option value="34.5">34.5</option>
                                    <option value="35">35</option>  
                                  </select>
                            </div>
                            <!--Stock-->
                            <div class="form-group">
                                <input type="number" class="form-control border-0 rounded-0 bg-light" name="stock" placeholder="Stock" required="required" value="<%=zapatillas.stock%>">
                            </div>
                                
                            </div>
                                                    
                            <figure>
                                <img class="w-100 border-1 p-1" src="/images/zapatillas/<%= zapatillas.images[0].filename%>" alt="imagen">
                                <input type="hidden" name="oldImagen"  value="<%= zapatillas.images[0].filename%>">
                                <input type="file" name="imagen[]" class="botonImg" >
                            </figure>    
                            <figure>
                                <img class="w-100 border-1 p-1" src="/images/zapatillas/<%= zapatillas.images[1].filename%>" alt="imagen">
                                <input type="hidden" name="oldImagen2"  value="<%= zapatillas.images[1].filename%>">
                                <input type="file" name="imagen[]" class="botonImg" >
                            </figure>
                            <figure>
                                <img class="w-100 border-1 p-1" src="/images/zapatillas/<%= zapatillas.images[2].filename%>" alt="imagen">
                                <input type="hidden" name="oldImagen3"  value="<%= zapatillas.images[2].filename%>">
                                <input type="file" name="imagen[]" class="botonImg" >
                            </figure>
                            <figure>
                                <img class="w-100 border-1 p-1" src="/images/zapatillas/<%= zapatillas.images[3].filename%>" alt="imagen">
                                <input type="hidden" name="oldImagen4"  value="<%= zapatillas.images[3].filename%>">
                                <input type="file" name="imagen[]" class="botonImg" >
                            </figure>
                            <figure>
                                <img class="w-100 border-1 p-1" src="/images/zapatillas/<%= zapatillas.images[4].filename%>" alt="imagen">
                                <input type="hidden" name="oldImagen5"  value="<%= zapatillas.images[4].filename%>">
                                <input type="file" name="imagen[]" class="botonImg" >
                            </figure>


                            <div class="form-group">
                                <button type="submit" class="btn btn btn-dark">Actualizar</button>
                                <a href="/adminProducts" class="btn btn-dark">Volver</a>
                            </div>
                            
                        </form>
                    </div>                        
                </div>
            </div>
        </div>
    </section>
    
    <!-- Footer-->
    <!-- FOOTER -->
    <%- include('../partials/footer.ejs') %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <!-- (Optional) Latest compiled and minified JavaScript translation files -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/i18n/defaults-*.min.js"></script>
    
</body>

</html>
