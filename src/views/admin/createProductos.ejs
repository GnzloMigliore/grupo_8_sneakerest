<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head.ejs') %>
    <!--Mi CSS-->
    <link rel="stylesheet" href="/css/administrar.css">  
    <link rel="stylesheet" href="/css/createProductos.css">  
</head>
<body>
    <header>
        <%- include('../partials/navBar.ejs') %>
    </header>
    
    <main class="container-fluid">
        <section class="row my-5">
            <article class="col-8 mx-auto">
                <h2 class="titulo-crear pb-3 border-bottom text-center pt-5 mx-auto text-uppercase">Cargar nuevo producto</h2>
            </article>
        </section>
        <section class="container">
            <div class="row">
                <article id="crear" class="col-8 mx-auto">
                    <form action="/adminProducts/create" method="POST" enctype="multipart/form-data">
                        <!--Marca-->
                        <div class="form-group">
                            <input type="text" class="form-control border-0 rounded-0 bg-light" name="marca" placeholder="Marca" required="required" value="">
                        </div>
                        <!--Modelo-->
                        <div class="form-group">
                            <input type="text" class="form-control border-0 rounded-0 bg-light" name="modelo" placeholder="Modelo" required="required" value="">
                        </div>
                        <!--Género, color, talles, precio y descuento-->
                        <div class="row">
                            <!--Género-->
                            <div class="form-group col-4" placeholder="Modelo" required="required" value="">
                                <select class="selectpicker col-12 select-talles pl-0" title="Género" data-header="Seleccione el género" name="genero">
                                    <option value="1">Men</option>
                                    <option value="2">Women</option>
                                    <option value="3">Kids</option>
                                </select>
                            </div>
                            <!--Color-->
                            <div class="form-group col-2 pl-0">
                                <input type="color" class="form-control border-0 rounded-0 bg-light" name="color" required="required" value="">
                            </div>
                            <!--Talles-->
                            <!--<div class="form-group col-6 pl-0">
                                <input class="form-control border-0 rounded-0 bg-light" name="talle" placeholder="Talles (separados por guión sin espacio)" required="required" value="">
                            </div>-->
                            <div class="form-group col-6 pl-0">
                                <select class="selectpicker col-12 select-talles pr-0" multiple title="Seleccione los talles" data-header="Seleccione los talles" name="talles">
                                    <option value="16">16</option>
                                    <option value="17">17</option>
                                    <option value="18">18</option>
                                    <option value="19">19</option>
                                    <option value="20">20</option>
                                    <option value="27">27</option>
                                    <option value="28">28</option>
                                    <option value="28.5">28.5</option>
                                    <option value="29">29</option>
                                    <option value="29.5">29.5</option>
                                    <option value="30">30</option>
                                    <option value="30.5">30.5</option>
                                    <option value="31">31</option>
                                    <option value="31.5">31.5</option>
                                    <option value="32">32</option>
                                    <option value="32.5">32.5</option>
                                    <option value="33">33</option>
                                    <option value="34.5">34.5</option>
                                    <option value="35">35</option>  
                                  </select>
                            </div>
                            <!--Precio-->
                            <div class="form-group col-7">
                                <input type="number" class="form-control border-0 rounded-0 bg-light" name="precio" placeholder="$" required="required" value="">
                            </div>
                            <!--Descuento-->
                            <div class="form-group col-5 pl-0">
                                <input type="number" class="form-control border-0 rounded-0 bg-light" name="descuento" placeholder="%" required="required" value="">
                            </div>
                        </div>
                        <!--Descripción de producto-->
                        <div class="form-group">
                            <input type="text" class="form-control border-0 rounded-0 bg-light" name="descripcion" placeholder="Descripción del producto" required="required" value="">
                        </div>
                        <!--Stock-->
                        <div class="form-group">
                            <input type="number" class="form-control border-0 rounded-0 bg-light" name="stock" placeholder="Stock" required="required" value="">
                        </div>
                        <!--Seleccionar imagenes-->
                        <div class="form-group d-flex flex-wrap justify-content-between">
                            <!--<div class="custom-file">
                                <input type="file" class="custom-file-input" id="customFile" placeholder="Seleccionar imágenes" multiple>
                                <label class="custom-file-label border-0 rounded-0 bg-light" for="customFile"></label>
                            </div>-->
                            <div class="custom-file inputs-imagenes">
                                <input type="file" name="imagen[]">
                            </div>
                            <div class="custom-file inputs-imagenes">
                                <input type="file" name="imagen[]">
                            </div>
                            <div class="custom-file inputs-imagenes">
                                <input type="file" name="imagen[]">
                            </div>
                            <div class="custom-file inputs-imagenes">
                                <input type="file" name="imagen[]">
                            </div>
                            <div class="custom-file inputs-imagenes">
                                <input type="file" name="imagen[]">
                            </div>
                        </div>
                        <!--Botones guardar volver-->
                        <div class="form-group row d-flex justify-content-center mx-auto mt-5">
                            <button type="submit" class="btn btn-dark col-8 border-0 rounded-0">Guardar producto</button>
                        </div>
                        <div class="form-group row d-flex justify-content-center mx-auto">
                            <a href="/adminProducts" class=" text-decoration-none text-body col-12 text-center pl-0">Volver</a>
                        </div> 
                    </form>
                </article>
            </div>
        </section>
    </main>
    <!-- FOOTER -->
    <%- include('../partials/footer.ejs') %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <!-- (Optional) Latest compiled and minified JavaScript translation files -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/i18n/defaults-*.min.js"></script>
    
</body>
</html>