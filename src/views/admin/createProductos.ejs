<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head.ejs') %>
    <!--Mi CSS-->
    <link rel="stylesheet" href="/css/administrar.css">  
    <link rel="stylesheet" href="/css/createProductos.css">  
    <link rel="stylesheet" href="/css/navbar.css">
</head>
<body>
    <header>
        <%- include('../partials/navBar.ejs') %>
    </header>
    
    <main class="container-fluid">
        <section class="row my-5">
            <article class="col-8 mx-auto">
                <h2 class="titulo-crear pb-3 border-bottom text-center pt-5 mx-auto text-uppercase">Cargar nuevo producto</h2>
            </article>
        </section>
        <section class="container">
            <div class="row">
                <div class="col-8 mx-auto">
                    <ul id="errores-create"></ul>
                </div>
                <article id="crear" class="col-8 mx-auto">
                    
                    <form action="/adminProducts/create" method="POST" enctype="multipart/form-data" id="formulario-create">
                        <!--Marca-->
                        <div class="form-group">
                            <select class="form-control bg-light" name="marca" value="<%= typeof old != 'undefined' ? old.marca : '' %>">
                                <option disabled selected value="">Seleccione una marca</option>
                                <option value="Adidas">Adidas</option>
                                <option value="Converse">Converse</option>
                                <option value="DC Shoes">DC Shoes</option>
                                <option value="New Balance">New Balance</option>
                                <option value="Nike">Nike</option>
                                <option value="Reebok">Reebok</option>
                                <option value="Vans">Vans</option>
                            </select>
                        </div>
                        <div class="form-group col-12 d-flex justify-content-center mt-0 mb-1">
                            <% if(typeof errors != 'undefined' && errors.marca){%>
                                <span class="text-danger" > <%=errors.marca.msg %></span>
                            <%}%>
                          </div>
                        <!--Modelo-->
                        <div class="form-group">
                            <input type="text" class="form-control bg-light" name="modelo" placeholder="Modelo"  value=""<%= typeof old != 'undefined' ? old.modelo : '' %>">
                        </div>
                        <div class="form-group col-12 d-flex justify-content-center mt-0 mb-1">
                            <% if(typeof errors != 'undefined' && errors.modelo){%>
                                <span class="text-danger" > <%=errors.modelo.msg %></span>
                            <%}%>
                          </div>
                        <!--Descripción de producto-->
                        <div class="form-group">
                            <input type="text" class="form-control bg-light" name="descripcion" placeholder="Descripción del producto"  value=""<%= typeof old != 'undefined' ? old.descripcion : '' %>">
                        </div>
                        <div class="form-group col-12 d-flex justify-content-center mt-0 mb-3">
                            <% if(typeof errors != 'undefined' && errors.descripcion){%>
                                <span class="text-danger" > <%=errors.descripcion.msg %></span>
                            <%}%>
                          </div>
                        <!--Género, color, talles-->
                        <div class="col-12 px-0 d-flex justify-content-between">
                            <!--Género-->
                            <div class="col-4 pl-0">
                                <div class="form-group col-12 mb-0 pl-0">
                                    <select class="form-group form-control col-12 mb-0 pl-0 py-2 bg-light" name="genero" value="<%= typeof old != 'undefined' ? old.genero : '' %>">
                                        <option disabled selected value="">Seleccione un género</option>
                                        <option value="hombre">Hombre</option>
                                        <option value="mujer">Mujer</option>
                                        <option value="niños">niños</option>
                                    </select>
                                </div>
                                <div class="form-group col-12 d-flex justify-content-center mt-0 mb-3 mx-0 px-0">
                                    <% if(typeof errors != 'undefined' && errors.genero){%>
                                        <span class="text-danger" > <%=errors.genero.msg %></span>
                                    <%}%>
                                </div>
                            </div>
                            
                            <!--Color-->
                            <div class="col-2 px-0">
                                <div class="form-group col-12 px-0">
                                    <input type="color" list="presetColors" class="form-control bg-light mb-0" name="color" value=""<%= typeof old != 'undefined' ? old.color : '' %>">
                                    <datalist id="presetColors">
                                        <option value="#" disabled></option>
                                        <option selected value="#000000"/>
                                        <option value="#b0c9d8"/>
                                        <option value="#2f425f"/>
                                        <option value="#ff641e"/>
                                        <option value="#bab6af"/>
                                        <option value="#7d3d47"/>
                                        <option value="#a19053"/>
                                        <option value="#d6ba9f"/>
                                        <option value="#a4b2ca"/>
                                        <option value="#d3898a"/>
                                        <option value="#aa94a2"/>
                                        <option value="#3c9392"/>
                                        <option value="#98ab2d"/>
                                        <option value=""/>
                                        <option value=""/>
                                        <option value=""/>
                                        <option value=""/>
                                        <option value=""/>
                                        <option value=""/>
                                    </datalist>
                                </div>
                                <div class="form-group col-12 d-flex justify-content-center mt-0 mb-3">
                                    <% if(typeof errors != 'undefined' && errors.color){%>
                                        <span class="text-danger" > <%=errors.color.msg %></span>
                                    <%}%>
                                </div>
                            </div>
                            
                            <!--Talles-->
                            <div class="col-6 pr-0">
                                <div class="form-group col-12 mb-0 pr-0">
                                    <select class="selectpicker form-control col-12 select-talles mb-0 pr-0" multiple title="Seleccione los talles" data-header="Seleccione los talles" name="talles" value=""<%= typeof old != 'undefined' ? old.talles : '' %>" >
                                        <option value="" disabled></option>
                                        <option value="16">16</option>
                                        <option value="17">17</option>
                                        <option value="18">18</option>
                                        <option value="19">19</option>
                                        <option value="20">20</option>
                                        <option value="27">27</option>
                                        <option value="28">28</option>
                                        <option value="28.5">28.5</option>
                                        <option value="29">29</option>
                                        <option value="29.5">29.5</option>
                                        <option value="30">30</option>
                                        <option value="30.5">30.5</option>
                                        <option value="31">31</option>
                                        <option value="31.5">31.5</option>
                                        <option value="32">32</option>
                                        <option value="32.5">32.5</option>
                                        <option value="33">33</option>
                                        <option value="34.5">34.5</option>
                                        <option value="35">35</option>  
                                    </select>
                                </div>
                                <div class="form-group col-12 d-flex justify-content-center mt-0 mb-3 mx-0 px-0">
                                    <% if(typeof errors != 'undefined' && errors.talles){%>
                                        <span class="text-danger" > <%=errors.talles.msg %></span>
                                    <%}%>
                                </div>
                            </div>
                            
                        </div>
                        <!--Precio y descuento-->
                        <div class="col-12 px-0 d-flex justify-content-between">
                            <!--Precio-->
                            <div class="form-group col-5 pl-0">
                                <input type="number" class="form-control bg-light" name="precio" placeholder="$"  value=""<%= typeof old != 'undefined' ? old.precio : '' %>">
                            </div>
                            <% if(typeof errors != 'undefined' && errors.precio){%>
                                <span class="text-danger" > <%=errors.precio.msg %></span>
                            <%}%>
                            <!--Descuento-->
                            <select class="form-group form-control col-7 pl-0 pr-2 bg-light" name="descuento" value=""<%= typeof old != 'undefined' ? old.descuento : '' %>">
                                <option disabled selected value="">Seleccione un descuento</option>
                                <option value="0">Sin descuento</option>
                                <option value="5">5%</option>
                                <option value="10">10%</option>
                                <option value="15">15%</option>
                                <option value="20">20%</option>
                                <option value="25">25%</option>
                                <option value="35">35%</option>
                                <option value="50">50%</option>
                            </select>
                            <% if(typeof errors != 'undefined' && errors.descuento){%>
                                <span class="text-danger" > <%=errors.descuento.msg %></span>
                            <%}%>
                        </div>
                        <!--Stock-->
                        <div class="form-group">
                            <input type="number" class="form-control bg-light" name="stock" placeholder="Stock"  value=""<%= typeof old != 'undefined' ? old.stock : '' %>">
                        </div>
                        <div class="form-group col-12 d-flex justify-content-center mt-0 mb-1">
                            <% if(typeof errors != 'undefined' && errors.stock){%>
                                <span class="text-danger" > <%=errors.stock.msg %></span>
                            <%}%>
                          </div>
                        <!--Seleccionar imagenes-->
                        <div class="form-group d-flex flex-wrap justify-content-between">
                            <!--<div class="custom-file">
                                <input type="file" class="custom-file-input" id="customFile" placeholder="Seleccionar imágenes" multiple>
                                <label class="custom-file-label border-0 rounded-0 bg-light" for="customFile"></label>
                            </div>-->
                            <div class="custom-file border-0 form-control inputs-imagenes">
                                <input type="file" name="imagen[]">
                            </div>
                            <div class="custom-file border-0 form-control inputs-imagenes">
                                <input type="file" name="imagen[]">
                            </div>
                            <div class="custom-file border-0 form-control inputs-imagenes">
                                <input type="file" name="imagen[]">
                            </div>
                            <div class="custom-file border-0 form-control inputs-imagenes">
                                <input type="file" name="imagen[]">
                            </div>
                            <div class="custom-file border-0 form-control inputs-imagenes">
                                <input type="file" name="imagen[]">
                            </div>
                        </div>
                        <div class="form-group col-12 d-flex justify-content-center mt-0 mb-1">
                            <% if(typeof errors != 'undefined' && errors.imagen){%>
                                <span class="text-danger" > <%=errors.imagen.msg %></span>
                            <%}%>
                          </div>
                        <!--Botones guardar volver-->
                        <div class="form-group row d-flex justify-content-center mx-auto mt-5">
                            <button type="submit" class="btn btn-dark col-8 border-0 rounded-0">Guardar producto</button>
                        </div>
                        <div class="form-group row d-flex justify-content-center mx-auto">
                            <a href="/adminProducts" class=" text-decoration-none text-body col-12 text-center pl-0">Volver</a>
                        </div> 
                    </form>
                </article>
            </div>
        </section>
    </main>
    <!-- FOOTER -->
    <%- include('../partials/footer.ejs') %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    
    
    <script src="/js/createProductos.js"></script>
    
</body>
</html>