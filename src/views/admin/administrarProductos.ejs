<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/administrar.css">
    <link rel="stylesheet" href="/css/navbar.css"> 
</head>
<body>

    <!-- REVISAR QUE LAS RUTAS COINCIDAN CON ROUTES -->

    <header class="container-fluid pl-0">
        <%- include('../partials/navBar.ejs') %>
    </header>

    <main class="container-fluid">

        <!--Listado de productos para administrar-->
        <section class="row">
            <article class="col-8 mx-auto mb-5">
            <h2 class="titulo-admin pb-3 border-bottom text-center pt-5 mx-auto text-uppercase">administrar</h2>
            </article>
            <div class="col-12 mx-0 px-0 d-flex justify-content-start align-items-center">
                <article class="m-3">
                    <a href="/adminProducts/create"><button type="button" class="btn btn-outline-dark rounded-0">+ Agregar producto</button>
                    </a>
                </article>
                <article class="col-8 my-3 d-flex justify-content-start">
                    <div class="dropdown">
                        <button class="btn btn-outline-dark rounded-0 dropdown-toggle boton-orden-filtro" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Marcas
                        </button>
                        <div class="dropdown-menu titulo-panel-filtros" aria-labelledby="dropdownMenuButton">
                            <form class="d-flex justify-content-center px-2" action="/adminProducts/adidas" method="GET">
                                <a class="text-decoration-none text-body" href="/adminProducts/adidas" id="adidas">Adidas</a>
                            </form>
                            <form class="d-flex justify-content-center px-2" action="/adminProducts/converse" method="GET">
                                <a class="text-decoration-none text-body" href="/adminProducts/converse">Converse</a>
                            </form>
                            <form class="d-flex justify-content-center px-2" action="/adminProducts/dc-shoes" method="GET">
                                <a class="text-decoration-none text-body" href="/adminProducts/dc-shoes">DC Shoes</a>
                            </form>
                            <form class="d-flex justify-content-center px-2" action="/adminProducts/new-balance" method="GET">
                                <a class="text-decoration-none text-body" href="/adminProducts/new-balance">New Balance</a>
                            </form>
                            <form class="d-flex justify-content-center px-2" action="/adminProducts/nike" method="GET">
                                <a class="text-decoration-none text-body" href="/adminProducts/nike">Nike</a>
                            </form>
                            <form class="d-flex justify-content-center px-2" action="/adminProducts/rebook" method="GET">
                                <a class="text-decoration-none text-body" href="/adminProducts/reebok">Reebok</a>
                            </form>
                            <form class="d-flex justify-content-center px-2" action="/adminProducts/vans" method="GET">
                                <a class="text-decoration-none text-body" href="/adminProducts/vans">Vans</a>
                            </form>
                            <form class="d-flex justify-content-center px-2" action="/adminProducts" method="GET">
                                <a class="text-decoration-none text-body" href="/adminProducts">Ver Todas</a>
                            </form>
                        </div>
                    </div>
                    
                </article>
            </div>
            <article class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col" style="width: 14%;">Marca</th>
                            <th scope="col" style="width: 20%;">Modelo</th>
                            <th scope="col" style="width: 10%;">GÃ©nero</th>
                            <th scope="col" class="text-center">Color</th>
                            <th scope="col" class="text-center">Stock</th>
                            <th scope="col" class="text-center">Ver</th>
                            <th scope="col" class="text-center">Editar</th>
                            <th scope="col" class="text-center">Borrar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% zapatillas.forEach(zapatilla => { %>
                            <tr>
                                <td><%= zapatilla.id %></td>
                                <td style="width: 14%;"><%= zapatilla.brands.name %></td>
                                <td style="width: 20%;"><%= zapatilla.examples.name %></td>
                                <td style="width: 10%;"><%= zapatilla.gender %> </td>
                                <td class="text-center"><i class="fas fa-circle" style="color: <%= zapatilla.color %>"></i></td>
                                <td class="text-center"><%= zapatilla.stock %> </td>
                                <td class="text-center"><a href="/adminProducts/detail/<%= zapatilla.id %>"><i class="fas fa-eye"></i></a></td>
                                <td class="text-center"><a href="/adminProducts/edit/<%= zapatilla.id%>"><i class="fas fa-pencil-alt"></i></a></td>
                                <td class="text-center"><a href="/adminProducts/delete/<%= zapatilla.id%>" class="btn-eliminar-producto"><i class="fas fa-trash-alt"></i></a></td>
                            </tr>
                        <% }); %> 
                    </tbody>
                </table>
            </article>
        </section>
    </main>
    <!-- FOOTER -->
    <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="/js/adminProducts.js"></script>
</body>
</html>