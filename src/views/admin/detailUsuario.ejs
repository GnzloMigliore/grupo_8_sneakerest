<!doctype html>
<html lang="es">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/administrar.css">
    <link rel="stylesheet" href="/css/navbar.css">
</head>

<body>
    <%- include('../partials/navBar.ejs') %>
    <main class="container">
        <section class="row mx-auto mb-5 pb-5">
            <article class="col-12 p-auto mb-2">
                <div class="circulo-imagen mx-auto my-5">
                    <img src="/images/usuarios/<%= usuarios.image %>" alt="<%= usuarios.first_name + " "%><%= usuarios.last_name %>">
                </div>
                <div class="col-6 border-bottom mx-auto mt-5 mb-4 pt-3">
                    <div class="col-12 d-flex justify-content-around align-items-center">
                        <p class="col-4 d-flex justify-content-start">Nombre y apellido: </p>
                        <p class="col-8 d-flex justify-content-start"><%= usuarios.first_name + " "%><%= usuarios.last_name %> </p>
                    </div>
                </div>
                <div class="col-6 border-bottom mx-auto mt-3 mb-4">
                    <div class="col-12 d-flex justify-content-around align-items-center">
                        <p class="col-4 d-flex justify-content-start">Email: </p>
                        <p class="col-8 d-flex justify-content-start"><%= usuarios.email %> </p>
                    </div>
                </div>
                <div class="col-6 border-bottom mx-auto mt-3 mb-4">
                    <div class="col-12 d-flex justify-content-around align-items-center">
                        <p class="col-4 d-flex justify-content-start">GÃ©nero: </p>
                        <p class="col-8 d-flex justify-content-start"><%= usuarios.gender %> </p>
                    </div>
                </div>
                <div class="col-6 border-bottom mx-auto mt-3 mb-4">
                    <div class="col-12 d-flex justify-content-around align-items-center">
                        <p class="col-4 d-flex justify-content-start">Rol: </p>
                        <p class="col-4 d-flex justify-content-start"><%= usuarios.role %> </p>
                        <a href="/adminUsers/edit/<%= usuarios.id %>" class="col-2 btn btn-light btn-outline-dark ml-auto mr-0 mb-3 py-0">Editar</a>
                    </div>
                </div>                 
            </article>
            <div class="col-12 mx-auto d-flex flex-column justify-content-center mb-5">
                <a href="/adminUsers" class="col-4 btn btn-dark mx-auto">Volver</a>
            </div>
        </section>
    </main>
    <!-- FOOTER -->
    <%- include('../partials/footer.ejs') %>    
</body>
</html>