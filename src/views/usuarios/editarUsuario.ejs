<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/perfilUsuario.css">
    <link rel="stylesheet" href="/css/navbar.css"> 
</head>
<body>
    <%- include('../partials/navBar.ejs') %>
    <main class="container">
        <section class="row mx-auto mb-5 pb-5">
            <form action="/perfil/editar/<%= locals.usuarios.id %> " method="POST" enctype="multipart/form-data" class="col-12 mx-0 px-0">
                <article class="col-12 p-auto mb-5">
                    <div class="circulo-imagen mx-auto my-5">
                        <img src="/images/usuarios/<%= locals.usuario.image %>" alt="" class="imagen-editar">
                        <!--<i class="fas fa-camera position-absolute text-secondary" style="font-size: 2rem;" ></i>-->
                        
                    </div>
                    <div class="col-6 mx-auto pr-auto text-center d-flex justify-content-center">
                        <input type="hidden" name="oldImagen"  value="<%= locals.usuario.image%>">
                        <input type="file" name="imagen">
                    </div>
                    <div class="col-6 border-bottom mx-auto mt-5 mb-4 pt-3">
                        <div class="col-12 d-flex justify-content-around align-items-center">
                            <p class="col-4 d-flex justify-content-start">Nombre: </p>
                            <input type="text" value="<%= locals.usuario.first_name %> " class="col-8 d-flex justify-content-start border-0 inputs-actualizar" name="nombre">
                        </div>
                    </div>
                    <div class="col-6 border-bottom mx-auto mt-3 mb-4">
                        <div class="col-12 d-flex justify-content-around align-items-center">
                            <p class="col-4 d-flex justify-content-start">Apellido: </p>
                            <input type="text" value="<%= locals.usuario.last_name %>" class="col-8 d-flex justify-content-start border-0 inputs-actualizar" name="apellido">
                        </div>
                    </div>
                    <div class="col-6 border-bottom mx-auto mt-3 mb-4">
                        <div class="col-12 d-flex justify-content-around align-items-center">
                            <p class="col-4 d-flex justify-content-start">Email: </p>
                            <input type="text" value="<%= locals.usuario.email %>" class="col-8 d-flex justify-content-start border-0 inputs-actualizar" name="email">
                        </div>
                    </div>
                    <div class="col-6 border-bottom mx-auto mt-3 mb-4">
                        <div class="col-12 d-flex justify-content-around align-items-center">
                            <p class="col-4 d-flex justify-content-start">Teléfono: </p>
                            <input type="text" value="<%= locals.usuario.telephone %>" class="col-8 d-flex justify-content-start border-0 inputs-actualizar" name="telefono">
                        </div>
                    </div>
                    <div class="col-6 border-bottom mx-auto mt-3 mb-4">
                        <div class="col-12 d-flex justify-content-around align-items-center">
                            <p class="col-4 d-flex justify-content-start my-auto">Género: </p>
                            <select id="genero" name="genero" class="custom-select border-0 btn btn-outline-dark py-0" value="<%= locals.usuario.gender %> " required>
                                <option value="Hombre">Hombre</option>
                                <option value="Mujer">Mujer</option>
                                <option value="Niño">Niño</option>
                                <option value="Niña">Niña</option>
                                <option value="Otro">Otro</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-6 mx-auto d-flex justify-content-between">
                        <a href="/perfil/editar/delete/<%= locals.usuario.id %>  " class="btn btn-danger">Eliminar usuario</a>
                        <div class="ml-0 pl-0">
                            <a href="/perfil " class="btn btn-outline-dark">Volver</a>
                            <button type="submit" class="btn btn btn-dark">Actualizar</button>
                        </div>
                    </div>
                         
                </article>
            </form>
        </section>
    </main>
    <!-- FOOTER -->
    <%- include('../partials/footer.ejs') %>    
</body>
</html>