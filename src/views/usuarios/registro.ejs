<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../partials/head.ejs') %>
  <link rel="stylesheet" href="/css/registro.css">
</head>

<body>
  <header class="container-fluid">
    <%- include('../partials/navBar.ejs') %>
  </header>
  <!--texto-->
  <main class="container-fluid">
    <section class="row">
      <article class="col-8 mx-auto mb-3">
        <h2 class="titulo-admin pb-3 border-bottom text-center pt-5 mx-auto text-uppercase">Nuevo usuario</h2>
      </article>
    </section>
    
    <% if(typeof(errors) != 'undefined'){%>
      <ul class="alert alert-danger">
        <% errors.forEach(error => { %>
          <li><%= error.msg%></li>
          <%});%>
      </ul>
    <%}%>
        <!--Formulario-->
        <!--Email-->
        <form action="/login/registro" method="POST" enctype="multipart/form-data" class="mt-0">
          <input type="text" name="nombre" placeholder="Nombre" class="col-12 mb-2 datos-envio-input" required="required" value="<%= typeof old != 'undefined' ? old.nombre : '' %>">
          <input type="text" name="apellido" placeholder="Apellido" class="col-12 mb-2 datos-envio-input" required="required" value="<%= typeof old != 'undefined' ? old.apellido : '' %>">
          <input type="Email" name="email" placeholder="Email" class="col-12 mb-2 datos-envio-input" required="required" value="<%= typeof old != 'undefined' ? old.email : '' %>">
          <input type="password" name="contraseña" placeholder="Contraseña" class="col-12 mb-2 datos-envio-input" required="required" value="">
          <input type="password" name="confirmar_contraseña" placeholder="Repetir contraseña" class="col-12 mb-2 datos-envio-input"  required="required" value="">
          <!--<input type="text" name="descripcion" placeholder="Descripción" class="col-12 mb-2 datos-envio-input"  required="required" value="">-->
          
          <select id="genero" name="genero" class="custom-select border-0 btn btn-outline-dark py-0" value="<%= typeof old != 'undefined' ? old.genero : '' %>">
            <option selected>Género</option>
            <option value="Men">Men</option>
            <option value="Women">Women</option>
            <option value="Boy">Boy</option>
            <option value="Girl">Girl</option>
            <option value="Otro">Otro</option>
          </select>
          <div class="custom-file py-3 mx-auto">
            <input type="file" name="imagen" value="<%= typeof old != 'undefined' ? old.file : '' %>" required>
          </div>
          <!--terminos y condiciones-->
          <div class="col-12 row align px-auto d-flex justify-content-center mt-3">
            <div class="form-check col-4 text-center">
              <input class="form-check-input position-static" type="checkbox" id="blankCheckbox" value="option1" aria-label="..."> Quiero novedades de snkrst.com
            </div>
            <div class="form-check col-4 text-center">
              <input class="form-check-input position-static" type="checkbox" id="blankCheckbox" value="option1" aria-label="..." required> Acepto los terminos y condiciones 
            </div>
          </div>
          <!--Botón crear cuenta-->
          <div class="ingresar col-12 mx-auto px-auto text-center mt-3">
            <button type="submit" class=" col-6 btn btn-dark border-0 rounded-0 pt-auto pb-auto text-uppercase">Crear cuenta</button>
          </div>
        </form>
        
        <!--ruta-->
        <div class="col-12 d-flex justify-content-center align-items-center ruta-ante-footer pt-5">
          <a href="/" class="px-2 text-decoration-none text-body">SNKRST</a>
          <p class="my-auto">|</p>
          <a href="/productos" class="px-2 text-decoration-none text-body"> HOMBRE</a>
          <p class="my-auto">|</p>
          <a href="/productos" class="px-2 text-decoration-none text-body"> NEW IN</a>
        </div>
        
        
        
  </main>
  <!--Footer-->
  <%- include('../partials/footer.ejs') %>
</body>
    
</html>